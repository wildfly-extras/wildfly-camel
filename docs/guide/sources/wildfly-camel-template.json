{
  "apiVersion": "v1",
  "kind": "Template",
  "labels": {},
  "metadata": {
    "annotations": {
      "description": "Build and run Camel applications on Wildfly",
      "iconClass": "icon-wildfly",
      "tags": "builder,wildfly,wildfly-camel,camel,java"
    },
    "labels": {},
    "name": "s2i-wildfly-camel"
  },
  "parameters": [
    {
      "name": "APP_NAME",
      "value": "s2i-wildfly-camel",
      "description": "Application Name"
    },
    {
      "name": "GIT_REPO",
      "required": true,
      "description": "Git repository, required"
    },
    {
      "name": "GIT_REF",
      "value": "master",
      "description": "Git ref to build"
    },
    {
      "name": "SERVICE_NAME",
      "value": "wildfly-camel-service",
      "description": "Exposed Service name"
    },
    {
      "name": "MYSQL_DATABASE",
      "value": "",
      "description": "Name of a pre-deployed MySQL database service"
    },
    {
      "name": "POSTGRESQL_DATABASE",
      "value": "",
      "description": "Name of a pre-deployed PostgreSQL database service"
    },
    {
      "name": "BUILDER_VERSION",
      "value": "4.3.0",
      "description": "Version of the S2I builder image to use"
    },
    {
      "name": "APP_VERSION",
      "value": "1.0.0-SNAPSHOT",
      "description": "Version generated application"
    },
    {
      "name": "MAVEN_ARGS",
      "value": "clean package -DskipTests -e",
      "description": "Arguments passed to mvn in the build"
    },
    {
      "name": "MAVEN_ARGS_APPEND",
      "description": "Extra arguments passed to mvn, e.g. for multi-module builds"
    },
    {
      "description": "Namespace in which the WildFly-Camel ImageStreams are installed",
      "name": "IMAGE_STREAM_NAMESPACE",
      "value": "openshift",
      "required": true
    },
    {
      "generate": "expression",
      "name": "BUILD_SECRET",
      "description": "The secret needed to trigger a build",
      "from": "[a-zA-Z0-9]{8}"
    }
  ],
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "labels": {
          "container": "java",
          "component": "${APP_NAME}",
          "provider": "s2i",
          "project": "${APP_NAME}",
          "version": "${APP_VERSION}",
          "group": "wildfly-camel"
        },
        "name": "${SERVICE_NAME}"
      },
      "spec": {
        "clusterIP": "None",
        "deprecatedPublicIPs": [],
        "ports": [
          {
            "port": 9412,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "container": "java",
          "project": "${APP_NAME}",
          "component": "${APP_NAME}",
          "provider": "s2i",
          "group": "wildfly-camel"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}",
        "creationTimestamp": null,
        "labels": {
          "component": "${APP_NAME}",
          "container": "java",
          "group": "wildfly-camel",
          "project": "${APP_NAME}",
          "provider": "s2i",
          "version": "${APP_VERSION}"
        }
      },
      "spec": {},
      "status": {
        "dockerImageRepository": ""
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}",
        "creationTimestamp": null,
        "labels": {
          "component": "${APP_NAME}",
          "container": "java",
          "group": "wildfly-camel",
          "project": "${APP_NAME}",
          "provider": "s2i",
          "version": "${APP_VERSION}"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "GitHub",
            "github": {
              "secret": "${BUILD_SECRET}"
            }
          },
          {
            "type": "Generic",
            "generic": {
              "secret": "${BUILD_SECRET}"
            }
          },
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_REPO}",
            "ref": "${GIT_REF}"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "${IMAGE_STREAM_NAMESPACE}",
              "name": "wildfly-camel:${BUILDER_VERSION}"
            },
            "forcePull": true,
            "incremental": true,
            "env": [
              {
                "name": "BUILD_LOGLEVEL",
                "value": "5"
              },
              {
                "name": "MAVEN_ARGS",
                "value": "${MAVEN_ARGS}"
              },
              {
                "name": "MAVEN_ARGS_APPEND",
                "value": "${MAVEN_ARGS_APPEND}"
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${APP_NAME}:latest"
          }
        },
        "resources": {}
      },
      "status": {
        "lastVersion": 0
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}",
        "creationTimestamp": null,
        "labels": {
          "component": "${APP_NAME}",
          "container": "java",
          "group": "wildfly-camel",
          "project": "${APP_NAME}",
          "provider": "s2i",
          "version": "${APP_VERSION}"
        }
      },
      "spec": {
        "strategy": {
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${APP_NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${APP_NAME}:latest"
              }
            }
          }
        ],
        "replicas": 1,
        "selector": {
          "component": "${APP_NAME}",
          "container": "java",
          "deploymentconfig": "${APP_NAME}",
          "group": "wildfly-camel",
          "project": "${APP_NAME}",
          "provider": "s2i",
          "version": "${APP_VERSION}"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "component": "${APP_NAME}",
              "container": "java",
              "deploymentconfig": "${APP_NAME}",
              "group": "wildfly-camel",
              "project": "${APP_NAME}",
              "provider": "s2i",
              "version": "${APP_VERSION}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${APP_NAME}",
                "image": "library/${APP_NAME}:latest",
                "readinessProbe" : {
                  "httpGet" : {
                    "path" : "/",
                    "port" : 8080
                  },
                  "initialDelaySeconds" : 30
                },
                "livenessProbe" : {
                  "httpGet" : {
                    "path" : "/",
                    "port" : 8080
                  },
                  "initialDelaySeconds" : 10
                },
                "ports": [
                  {
                    "containerPort": 8080,
                    "name": "http",
                    "protocol": "TCP"
                  }
                ],
                "resources": {}
              }
            ]
          }
        }
      },
      "status": {}
    }
  ]
}
