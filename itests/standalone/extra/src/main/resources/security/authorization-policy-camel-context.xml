<spring:beans xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://camel.apache.org/schema/spring-security http://camel.apache.org/schema/spring-security/camel-spring-security.xsd">

  <authorizationPolicy id="policyA" 
                       authenticationAdapter="authenticationAdapter"
                       authenticationManager="authenticationManager"
                       accessDecisionManager="accessDecisionManagerA"
                       xmlns="http://camel.apache.org/schema/spring-security"/>
                       
  <authorizationPolicy id="policyB" 
                       authenticationAdapter="authenticationAdapter"
                       authenticationManager="authenticationManager"
                       accessDecisionManager="accessDecisionManagerB"
                       xmlns="http://camel.apache.org/schema/spring-security"/>
                       
  <authorizationPolicy id="policyC" 
                       authenticationAdapter="authenticationAdapter"
                       authenticationManager="authenticationManager"
                       accessDecisionManager="accessDecisionManagerC"
                       xmlns="http://camel.apache.org/schema/spring-security"/>
  
  <bean id="authenticationAdapter" class="org.wildfly.extension.camel.security.UsernamePasswordAuthenticationAdapter"/>
  <bean id="authenticationManager" class="org.wildfly.extension.camel.security.DomainAuthenticationManager"/>
  <bean id="accessDecisionManagerA" class="org.wildfly.extension.camel.security.DomainDecisionManager"/>
  <bean id="accessDecisionManagerB" class="org.wildfly.extension.camel.security.DomainDecisionManager">
    <property name="role">
        <value>Role2</value>
    </property>
  </bean>
  <bean id="accessDecisionManagerC" class="org.wildfly.extension.camel.security.DomainDecisionManager">
    <property name="role">
        <value>Role3</value>
    </property>
  </bean>
  
  <camelContext id="contextA" xmlns="http://camel.apache.org/schema/spring">
    <route>
      <from uri="direct:start"/>
      <policy ref="policyA">
        <transform>
          <simple>Hello ${body}</simple>
        </transform>
      </policy>
    </route>
  </camelContext>
  
  <camelContext id="contextB" xmlns="http://camel.apache.org/schema/spring">
    <route>
      <from uri="direct:start"/>
      <policy ref="policyB">
        <transform>
          <simple>Hello ${body}</simple>
        </transform>
      </policy>
    </route>
  </camelContext>
  
  <camelContext id="contextC" xmlns="http://camel.apache.org/schema/spring">
    <route>
      <from uri="direct:start"/>
      <policy ref="policyC">
        <transform>
          <simple>Hello ${body}</simple>
        </transform>
      </policy>
    </route>
  </camelContext>
  
</spring:beans>
