<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
        http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

    <jaxrs:server id="jaxrsServer" address="http://localhost:8080/services">
        <jaxrs:serviceBeans>
            <ref bean="asyncService"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <bean id="asyncService" class="org.wildfly.camel.test.cxf.rs.subA.AsyncService"/>

    <camelContext id="cxfrs-async-context" xmlns="http://camel.apache.org/schema/spring">
        <route>
            <from uri="direct:start"/>
            <setHeader name="CamelHttpMethod">
                <constant>GET</constant>
            </setHeader>
            <to uri="cxfrs://http://localhost:8080/services/async/hello"/>
        </route>
    </camelContext>
</beans>
