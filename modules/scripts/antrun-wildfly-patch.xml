<project default="build">

    <!-- ================================================================== -->
    <!-- Setup                                                              -->
    <!-- ================================================================== -->
    <property name="etc.dir" value="${basedir}/etc" />
    <property name="output.dir" value="${basedir}/target" />
    <property name="resources.dir" value="${basedir}/src/main/resources" />
    <property name="wildfly.patch.dir" value="${output.dir}/wildfly-patch" />
    <property name="deploy.artifacts.dir" value="${output.dir}/deploy-artifacts" />
    <property name="deploy.artifacts.lib" value="${deploy.artifacts.dir}/lib" />
    <property name="deploy.artifacts.org.wildfly.example.camel.activemq.lib" value="${deploy.artifacts.dir}/activemq/lib" />
    <property name="deploy.artifacts.resources" value="${deploy.artifacts.dir}/resources" />

    <!-- ================================================================== -->
    <!-- Initialization                                                     -->
    <!-- ================================================================== -->
    <target name="init">
    </target>

    <!-- ================================================================== -->
    <!-- Distribution                                                       -->
    <!-- ================================================================== -->
    <target name="build" depends="init">

        <!-- Copy filtered resources -->
        <copy todir="${wildfly.patch.dir}" overwrite="true">
            <fileset dir="${etc.dir}/wildfly" />
            <filterset>
                <filter token="project.version" value="${project.version}" />
                <filter token="version.apache.activemq" value="${version.apache.activemq}" />
                <filter token="version.apache.activemq.protobuf" value="${version.apache.activemq.protobuf}" />
                <filter token="version.apache.camel" value="${version.apache.camel}" />
                <filter token="version.apache.deltaspike" value="${version.apache.deltaspike}" />
                <filter token="version.apache.felix.configadmin" value="${version.apache.felix.configadmin}" />
                <filter token="version.apache.felix.http" value="${version.apache.felix.http}" />
                <filter token="version.apache.felix.log" value="${version.apache.felix.log}" />
                <filter token="version.apache.felix.metatype" value="${version.apache.felix.metatype}" />
                <filter token="version.apache.felix.scr" value="${version.apache.felix.scr}" />
                <filter token="version.apache.xbean.spring" value="${version.apache.xbean.spring}" />
                <filter token="version.geronimo.j2ee.management.spec" value="${version.geronimo.j2ee.management.spec}" />
                <filter token="version.hawtbuf" value="${version.hawtbuf}" />
                <filter token="version.spring" value="${version.spring}" />
                <filter token="version.jboss.gravia" value="${version.jboss.gravia}" />
                <filter token="version.osgi" value="${version.osgi}" />
                <filter token="version.aopalliance" value="${version.aopalliance}" />
            </filterset>
        </copy>

        <!-- ActiveMQ jars -->
        <copy todir="${wildfly.patch.dir}/modules/org/apache/activemq/main">
            <fileset dir="${deploy.artifacts.org.wildfly.example.camel.activemq.lib}">
                <include name="**/*"/>
                <exclude name="broker-config.xml"/>
                <exclude name="META-INF/**"/>
            </fileset>
        </copy>

        <!-- AOP Alliance jars -->
        <copy file="${deploy.artifacts.lib}/aopalliance-${version.aopalliance}.jar" todir="${wildfly.patch.dir}/modules/org/springframework/aop/main" />

        <!-- Camel jars -->
        <copy file="${deploy.artifacts.lib}/camel-core-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/core/main" />
        <copy file="${deploy.artifacts.lib}/camel-core-xml-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/core/xml/main" />
        <copy file="${deploy.artifacts.lib}/camel-spring-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/spring/main" />

        <!-- Camel Component jars -->
        <copy file="${deploy.artifacts.lib}/camel-atom-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/atom/main" />
        <copy file="${deploy.artifacts.lib}/camel-bindy-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/bindy/main" />
        <copy file="${deploy.artifacts.lib}/camel-cdi-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/cdi/main" />
        <copy todir="${wildfly.patch.dir}/modules/org/apache/camel/component/cxf/main">
            <fileset dir="${deploy.artifacts.lib}">
                <include name="camel-cxf-transport-${version.apache.camel}.jar" />
                <include name="camel-cxf-${version.apache.camel}.jar" />
            </fileset>
        </copy>
        <copy file="${deploy.artifacts.lib}/camel-ftp-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/ftp/main" />
        <copy file="${deploy.artifacts.lib}/camel-hl7-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/hl7/main" />
        <copy file="${deploy.artifacts.lib}/camel-jaxb-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/jaxb/main" />
        <copy file="${deploy.artifacts.lib}/camel-jms-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/jms/main" />
        <copy file="${deploy.artifacts.lib}/camel-jmx-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/jmx/main" />
        <copy file="${deploy.artifacts.lib}/camel-jpa-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/jpa/main" />
        <copy file="${deploy.artifacts.lib}/camel-mail-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/mail/main" />
        <copy file="${deploy.artifacts.lib}/camel-mina2-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/mina2/main" />
        <copy file="${deploy.artifacts.lib}/camel-mqtt-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/mqtt/main" />
        <copy file="${deploy.artifacts.lib}/camel-mvel-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/mvel/main" />
        <copy file="${deploy.artifacts.lib}/camel-netty-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/netty/main" />
        <copy file="${deploy.artifacts.lib}/camel-ognl-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/ognl/main" />
        <copy file="${deploy.artifacts.lib}/camel-quartz-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/quartz/main" />
        <copy file="${deploy.artifacts.lib}/camel-rss-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/rss/main" />
        <copy file="${deploy.artifacts.lib}/camel-saxon-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/saxon/main" />
        <copy file="${deploy.artifacts.lib}/camel-script-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/script/main" />
        <copy file="${deploy.artifacts.lib}/camel-soap-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/soap/main" />
        <copy file="${deploy.artifacts.lib}/camel-sql-${version.apache.camel}.jar" todir="${wildfly.patch.dir}/modules/org/apache/camel/component/sql/main" />

        <!-- Deltaspike jars -->
        <copy file="${deploy.artifacts.lib}/deltaspike-core-api-${version.apache.deltaspike}.jar" todir="${wildfly.patch.dir}/modules/org/apache/deltaspike/core/api/main" />
        <copy file="${deploy.artifacts.lib}/deltaspike-core-impl-${version.apache.deltaspike}.jar" todir="${wildfly.patch.dir}/modules/org/apache/deltaspike/core/impl/main" />
        <copy file="${deploy.artifacts.lib}/deltaspike-cdictrl-api-${version.apache.deltaspike}.jar" todir="${wildfly.patch.dir}/modules/org/apache/deltaspike/cdictrl/api/main" />
        
        <!-- Gravia jars -->
        <copy todir="${wildfly.patch.dir}/modules/org/jboss/gravia/main">
            <fileset dir="${deploy.artifacts.lib}">
                <include name="gravia-provision-${version.jboss.gravia}.jar" />
                <include name="gravia-repository-${version.jboss.gravia}.jar" />
                <include name="gravia-resolver-${version.jboss.gravia}.jar" />
                <include name="gravia-resource-${version.jboss.gravia}.jar" />
                <include name="gravia-runtime-api-${version.jboss.gravia}.jar" />
                <include name="gravia-runtime-embedded-${version.jboss.gravia}.jar" />
                <include name="org.apache.felix.configadmin-*.jar" />
                <include name="org.apache.felix.http.bridge-*.jar" />
                <include name="org.apache.felix.log-*.jar" />
                <include name="org.apache.felix.metatype-*.jar" />
                <include name="org.apache.felix.scr-*.jar" />
            </fileset>
        </copy>

        <!-- OSGi jars -->
        <copy file="${deploy.artifacts.lib}/org.osgi.core-${version.osgi}.jar" todir="${wildfly.patch.dir}/modules/org/osgi/core/main" />
        <copy file="${deploy.artifacts.lib}/org.osgi.enterprise-${version.osgi}.jar" todir="${wildfly.patch.dir}/modules/org/osgi/enterprise/main" />

        <!-- Springsource jars -->
        <copy file="${deploy.artifacts.lib}/spring-aop-${version.spring}.jar" todir="${wildfly.patch.dir}/modules/org/springframework/aop/main" />
        <copy file="${deploy.artifacts.lib}/spring-beans-${version.spring}.jar" todir="${wildfly.patch.dir}/modules/org/springframework/beans/main" />
        <copy file="${deploy.artifacts.lib}/spring-context-${version.spring}.jar" todir="${wildfly.patch.dir}/modules/org/springframework/context/main" />
        <copy file="${deploy.artifacts.lib}/spring-core-${version.spring}.jar" todir="${wildfly.patch.dir}/modules/org/springframework/core/main" />
        <copy file="${deploy.artifacts.lib}/spring-expression-${version.spring}.jar" todir="${wildfly.patch.dir}/modules/org/springframework/expression/main" />
        <copy file="${deploy.artifacts.lib}/spring-jms-${version.spring}.jar" todir="${wildfly.patch.dir}/modules/org/springframework/jms/main" />
        <copy file="${deploy.artifacts.lib}/spring-tx-${version.spring}.jar" todir="${wildfly.patch.dir}/modules/org/springframework/transaction/main" />
        <copy file="${deploy.artifacts.lib}/spring-orm-${version.spring}.jar" todir="${wildfly.patch.dir}/modules/org/springframework/orm/main" />
        <copy file="${deploy.artifacts.lib}/spring-jdbc-${version.spring}.jar" todir="${wildfly.patch.dir}/modules/org/springframework/jdbc/main" />

        <!-- Zip the wildfly patch -->
        <!-- zip destfile="${output.dir}/${project.artifactId}-${project.version}.zip" basedir="${wildfly.patch.dir}"/-->
        <tar destfile="${output.dir}/${project.artifactId}-${project.version}.tar.gz" basedir="${wildfly.patch.dir}" compression="gzip"/>

    </target>
</project>
