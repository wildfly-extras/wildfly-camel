<!--
  This file holds all module definitions that come with wildfly. Here
  we map maven artifacts to those modules, but skip generating the modules since
  they are provided for us.
-->
<modules xmlns="http://smartics.de/ns/jboss-modules-descriptor/2">

    <module name="org.apache.logging.log4j.core" skip="true">
        <include artifact="org.apache.logging.log4j:log4j-core" />
    </module>

    <module name="org.apache.lucene" slot="5.5" skip="true">
        <include artifact="org.apache.lucene:lucene-analyzers-common" />
        <include artifact="org.apache.lucene:lucene-core" />
        <include artifact="org.apache.lucene:lucene-queries" />
        <include artifact="org.apache.lucene:lucene-queryparser" />
        <include artifact="org.apache.lucene:lucene-sandbox" />
    </module>

    <module name="com.google.inject.guice" slot="3.0" skip="true">
        <include artifact="com.google.inject:guice"/>
    </module>

    <module name="org.kie.remote" slot="6.5" skip="true">
        <include artifact="org.kie.remote:kie-remote-client" />
        <include artifact="org.kie.remote:kie-remote-common" />
        <include artifact="org.kie.remote:kie-remote-jaxb" />
        <include artifact="org.kie.remote.ws:kie-remote-ws-common" />
    </module>

</modules>
